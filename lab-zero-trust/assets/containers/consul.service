[Unit]
Description=Consul Server 
Requires=network-online.target
After=network-online.target

[Service]
User=root
Group=root
Environment="DATACENTER=dc1"
Environment="CONSUL_DATA_DIR=/etc/consul/data"
Environment="CONSUL_CONFIG_DIR=/etc/consul/config"
ExecStart=/usr/local/bin/consul consul agent -node=consul -config-dir=${CONSUL_CONFIG_DIR}
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGTERM
Restart=on-failure
RestartSec=5
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
